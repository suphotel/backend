// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  pseudo   String @unique
  password String
  role     Role

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@map("users")
}

model Hotel {
  id Int @id @default(autoincrement())
  name String
  location String
  description String

  images HotelImage[]

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@map("hotels")
}

model HotelImage {
  id Int @id @default(autoincrement())

  originalName String
  fileName String
  mimeType String
  path String
  size Int

  hotelId Int
  hotel Hotel @relation(fields: [hotelId], references: [id])

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@map("hotel_images")
}